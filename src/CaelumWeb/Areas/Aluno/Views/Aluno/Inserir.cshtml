@model CaelumWeb.Models.Aluno

<form asp-controller="Aluno" asp-action="Inserir" method="post">
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="Nome"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="Cpf"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2"><label asp-for="Endereco"></label></div>
                <div class="col-sm-4">
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    <label asp-for="Cidade"></label>
                </div>
                <div class="col-sm-4"><input asp-for="Cidade" class="form-control" /></div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-2"><label asp-for="Estado"></label></div>
                <div class="col-sm-4"><input asp-for="Estado" class="form-control" /></div>
            </div>
        </div>
        <input type="submit" value="Inserir" class="btn btn-primary" />
    </div>
</form>

